#!/usr/bin/env bash
set -euo pipefail

# Base prerequisites shared by all subsequent scripts.

OS="$(uname -s)"

if [[ "$OS" == "Linux" ]]; then
  if command -v apt-get >/dev/null 2>&1; then
    sudo apt-get update
    sudo apt-get install -y --no-install-recommends \
      ca-certificates curl git zsh wget rsync nmap btop tree zoxide llvm \
      ncurses-bin zsh-autosuggestions zsh-syntax-highlighting wormhole-william
  else
    echo "ERROR: apt-get not found. This script currently targets Debian/RaspiOS."
    exit 1
  fi

elif [[ "$OS" == "Darwin" ]]; then
  # Homebrew is the most reliable base package manager on macOS.
  if ! command -v brew >/dev/null 2>&1; then
    echo "Homebrew not found. Installing..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  fi

  # Ensure brew is available in the current shell (both Intel and Apple Silicon).
  if [[ -x /opt/homebrew/bin/brew ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
  elif [[ -x /usr/local/bin/brew ]]; then
    eval "$(/usr/local/bin/brew shellenv)"
  fi

  brew update
  brew install git zsh curl

else
  echo "ERROR: Unsupported OS: $OS"
  exit 1
fi
